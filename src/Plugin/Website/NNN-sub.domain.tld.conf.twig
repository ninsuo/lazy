
# This file is only used to create a certificate

<Directory {{ dir }}/exposed>
    Options FollowSymLinks
    AllowOverride All
    Require all granted
</Directory>

<VirtualHost *:80>
    ServerName {{ fqdn }}
    ServerAdmin {{ email }}
    DocumentRoot {{ dir }}/exposed
    ErrorLog {{ dir }}/logs/error.log
    CustomLog {{ dir }}/logs/access.log combined
</VirtualHost>
