{% autoescape false %}
;
; BIND reverse data file for {{ arpa }}.XXX interface
;
$TTL	86400
@	IN	SOA	{{ domain }}. {{ email }}. (
			{{ timestamp }}	; Serial
			 10800		; Refresh
			  3600		; Retry
			604800		; Expire
			 10800 )	; Negative Cache TTL
;
@	IN	NS	{{ domain }}.
{% for domain in domains %}
{{ revArpa }}	IN	PTR	{{ domain }}.
{% endfor %}

{% endautoescape %}
