{% autoescape false %}
;
; BIND data file for {{ name }}
;
$ORIGIN {{ domain }}.
$TTL	86400
@	IN	SOA	ns.{{ domain }}. {{ email }}. (
			{{ timestamp }}	; Serial
			10800		; Refresh
			3600		; Retry
			604800		; Expire
			10800 )	; Negative Cache TTL
;
@	IN	NS	ns.{{ domain }}.
@	IN	TXT	"v=spf1 +a +mx +ip4:{{ server_ip }} -all"
@	IN	A	{{ server_ip }}
*	IN	A	{{ server_ip }}

{% endautoescape %}
